<theme>

   <view name="system">
      <carousel name="system-carousel">
         <size>1 1</size>
         <pos>0 0</pos>
         <origin>0 0</origin>
         <color>00000000</color>
         <staticImage>./_inc/images/systems/${system.theme}.png</staticImage>
         <defaultImage>./_inc/images/utility/background-missing.png</defaultImage>
         <itemTransitions>instant</itemTransitions>
         <itemScale>1</itemScale>
         <itemSize>1 1</itemSize>
         <maxItemCount>5</maxItemCount>
         <itemVerticalAlignment>center</itemVerticalAlignment>
         <textColor>00000000</textColor>
         <letterCase>uppercase</letterCase>
         <fontPath>${logoFont}</fontPath>
      </carousel>
      <image name="system-logo">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <maxSize>0.5 0.3</maxSize>
         <path>./_inc/images/systems/${system.theme}.svg</path>
         <zIndex>100</zIndex>
      </image>
      <image name="background-art-mask">
         <origin>0.5 0</origin>
         <pos>0.5 0</pos>
         <size>0 1</size>
         <zIndex>1</zIndex>
         <color>${systemBackgroundColor}</color>
         <interpolation>linear</interpolation>
         <path>./_inc/images/utility/background-art-mask-16-10.png</path>
      </image>
   </view>

</theme>