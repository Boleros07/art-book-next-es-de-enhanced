         <origin>0.5 0.5</origin>
         <pos>0.685413005272408 0.525</pos><!-- 390 168 -->
         <maxSize>0.421792618629174 0.75</maxSize><!-- 240 240 -->
      </image>
      <video name="md_video">
         <pos>0.685413005272408 0.5</pos><!-- 390 160 -->
