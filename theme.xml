<theme>
   <formatVersion>7</formatVersion>

   <variables>
      <logoFont>./_inc/fonts/ChangaOne-Italic.ttf</logoFont>
      <bodyFont>./_inc/fonts/Oxygen-Bold.ttf</bodyFont>
      <spacerImage>./_inc/images/utility/space.png</spacerImage>
   </variables>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <pos>1 1</pos>
      </helpsystem>
      <image name="logo">
         <path>./_inc/images/systems/logos/${system.theme}.svg</path>
      </image>
      <text name="logoText">
         <fontPath>${logoFont}</fontPath>
         <forceUppercase>true</forceUppercase>
         <lineSpacing>1</lineSpacing>
         <alignment>center</alignment>
         <color>ffffff</color>
      </text>
   </view>

   <view name="system">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>111111</color>
      </image>
      <carousel name="systemcarousel">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <type>horizontal</type>
         <color>00000000</color>
         <size>1 1</size>
         <logoSize>0.55 0.425</logoSize>
         <logoScale>1</logoScale>
         <maxLogoCount>1</maxLogoCount>
      </carousel>
      <text name="systemInfo">
         <pos>1 1</pos>
      </text>
      <image name="background-art" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <size>0 1</size>
         <color>ffffffcc</color>
         <path>./_inc/images/utility/default-background.jpg</path>
         <path>./_inc/images/systems/centered/${system.theme}.png</path>
      </image>
      <image name="background-art-mask" extra="true">
         <origin>0.5 0</origin>
         <pos>0.5 0</pos>
         <size>0 1</size>
         <path>./_inc/images/utility/centered-background-mask.svg</path>
      </image>
   </view>

   <view name="basic,detailed,video">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <zIndex>2</zIndex>
         <color>aaaaaa</color>
      </image>
      <text name="logoText">
         <origin>0.5 0.5</origin>
         <color>ffffffcc</color>
         <zIndex>2</zIndex>
      </text>
      <textlist name="gamelist">
         <origin>0 0</origin>
         <alignment>left</alignment>
         <fontPath>${bodyFont}</fontPath>
         <horizontalMargin>0.008</horizontalMargin>
         <selectorColor>111111</selectorColor>
         <selectedColor>ffffff</selectedColor>
         <primaryColor>444444</primaryColor>
         <secondaryColor>444444</secondaryColor>
         <zIndex>2</zIndex>
      </textlist>
      <image name="gamelist-background" extra="true">
         <origin>0 0</origin>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>111111</color>
         <zIndex>1</zIndex>
      </image>
      <image name="gamelist-border" extra="true">
         <origin>0 0</origin>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>000000</color>
         <zIndex>1</zIndex>
      </image>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>000000</color>
         <zIndex>0</zIndex>
      </image>
   </view>

   <view name="basic">
      <image name="background-art" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <size>0 1</size>
         <tile>false</tile>
         <color>ffffffcc</color>
         <path>./_inc/images/utility/default-background.jpg</path>
         <zIndex>0</zIndex>
      </image>
   </view>

   <view name="detailed,video">
      <text name="md_lbl_rating,md_lbl_developer,md_developer,md_lbl_publisher,md_publisher,md_lbl_playcount,md_playcount,md_lbl_lastplayed,md_lbl_players,md_players,md_lbl_releasedate,md_lbl_genre,md_genre,md_description,md_name,md_lbl_gametime,md_gametime">
         <pos>1 1</pos>
         <fontPath>${bodyFont}</fontPath>
         <alignment>left</alignment>
         <color>ffffff</color>
      </text>
      <text name="md_genre,md_lbl_players,md_players">
         <color>333333</color>
      </text>
      <text name="md_description">
         <color>888888</color>
      </text>
      <text name="md_lbl_lastplayed,md_lbl_playcount,md_playcount,md_lbl_developer,md_developer,md_lbl_publisher,md_publisher,md_lbl_gametime,md_gametime">
         <color>444444</color>
      </text>
      <datetime name="md_releasedate,md_lastplayed">
         <pos>1 1</pos>
         <fontPath>${bodyFont}</fontPath>
         <color>333333</color>
         <alignment>left</alignment>
      </datetime>
      <rating name="md_rating">
         <pos>1 1</pos>
         <color>333333</color>
      </rating>
   </view>

   <view name="video">
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <delay>0.9</delay>
         <showSnapshotDelay>true</showSnapshotDelay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <zIndex>0</zIndex>
      </video>
   </view>

   <!-- 16-9 Layout Changes - To be moved into a seperate XML later -->
   <view name="system">
      <text name="logoText">
         <fontSize>0.15</fontSize>
      </text>
   </view>
